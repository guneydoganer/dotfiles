# GTK styling
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Ant-Dracula'
    gsettings set $gnome-schema icon-theme 'Mojave-CT'
    gsettings set $gnome-schema cursor-theme 'capitaine-cursors'
}

# Gaps
default_border pixel 3
default_floating_border pixel 4
gaps inner 10
gaps outer 10 
smart_gaps on
smart_borders on


# Autostart
exec --no-startup-id mako
exec --no-startup-id nm-applet
exec --no-startup-id protonmail-bridge
exec --no-startup-id solaar
exec_always --no-startup-id qbittorrent

# Window styling
for_window [app_id="org.clementine-player.clementine"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="nm-applet"] floating enable
for_window [app_id="solaar"] floating enable
for_window [app_id="vlc"] floating enable

include /etc/sway/config.d/*
